{% extends 'base.html.twig' %}

{% block title %}{% if edition == true %}Editer{% else %}Ajouter{% endif %} une publication{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .photo-form {
      margin: 15px 0;
      padding: 10px;
      border: 1px solid #ccc;
      background: #f1f1f1;
      position: relative;
    }
    .photo-form button.remove-btn {
      position: absolute;
      top: 5px;
      right: 5px;
      background: #ff4c4c;
      color: white;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
    }
    .preview {
      margin-top: 10px;
      max-width: 200px;
      max-height: 150px;
      display: block;
    }
    #limit-message {
      color: red;
      margin-top: 10px;
    }
  </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-end position-fixed top-0 end-0 m-3">
