{% if employe %}

<div class="d-flex justify-content-around">
    <a href="{{ path('app_afficher_fac') }}" class="btn btn-sm btn-outline-primary">Consulter la fiche d'avancement du chantier</a>
    <form action="{{ path('app_supprimer_un_contrat', { 'id': contrat.id }) }}" method="POST" style="display: none;" id="deleteForm{{ contrat.id }}">
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <input type="hidden" name="_token" value="{{ csrf_token('supprimer_un_contrat' ~ contrat.id) }}">
    </form>
    <a href="#" class="btn btn-outline-danger btn-sm" onclick="showDeleteModal({{ contrat.id }}); return false;">Supprimer ce contrat</a>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer ce contrat ? Cette action est irréversible.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" onclick="deleteContract();">Supprimer</button>
            </div>
        </div>
    </div>
</div>
<script>
    function showDeleteModal(contratId) {
        window.contractToDelete = contratId;
        const myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        myModal.show();
    }

    function deleteContract() {
        const form = document.getElementById('deleteForm' + window.contractToDelete);
        form.submit();
    }
</script>

{% endif %}

<div class="container my-5">

    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5 d-flex justify-content-center">
            <div class="card bg-transparent" style="width: 18rem;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mx-auto mb-3">{{client.prenom}} {{client.nom}}</h5>
                    <span class="card-text">Fixe : {{client.telephoneFixe}}</span>
                    <span class="card-text">Mobile : {{client.telephoneMobile}}</span>
                    <span class="card-text">{{client.rueEtNumero}}, {{client.codePostal}} {{client.ville}}</span>
                    <span class="card-text">Société : {{client.societe}}</span>
                    <br>
                    <span class="card-text">Contrat No : {{contrat.numeroContrat}}</span>
                </div>
            </div>
        </div>
    </div>

{% if etatsSuccessifsSpecifiesPar is defined and etatsSuccessifsSpecifiesPar|length > 0 %}
    <p class="mt-5 fs-5 fw-semibold">Etats successifs du contrat :</p>
    <ul>
        {% for etat in etatsSuccessifsSpecifiesPar %}
            <li>{{ etat.etat.etat }} - spécifié par {{ etat.specifiePar.prenom }} {{ etat.specifiePar.nom }} le {{ etat.etat.dateHeureInsertion |format_datetime(locale='fr', pattern='EEEE d MMMM y à HH:mm') }}</li>
        {% endfor %}
    </ul>
{% endif %}

{% if contrat.cheminFichier is defined and contrat.cheminFichier is not null %}
    <p class="fs-4 fw-semibold"> {{ contrat.cheminFichier|split('/')|last }} </p>

    {# <div id="pdf-textlayer-container" class="border border-success border-5 border-opacity-50 rounded"></div> #}

    <div>
        <button id="prev" class='btn btn-outline-light btn-sm mb-1'>Précédente</button>
        &nbsp; &nbsp;
        <span>Page: <span id="page_num"></span> / <span id="page_count"></span></span>
        &nbsp; &nbsp;
        <button id="next" class='btn btn-outline-light btn-sm mb-1'>Suivante</button>
    </div>
    <canvas id="the-canvas" class="border border-primary border-5 border-opacity-50 rounded"></canvas>

    <script type="module">

        const url = "{{ asset('storage/' ~ contrat.cheminFichier) }}";

        var { pdfjsLib } = globalThis;

        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';

        var pdfDoc = null,
            pageNum = 1,
            pageRendering = false,
            pageNumPending = null,
            scale = 1,
            canvas = document.getElementById('the-canvas'),
            ctx = canvas.getContext('2d');

        function renderPage(num) {
            pageRendering = true;
            pdfDoc.getPage(num).then(function(page) {
                var viewport = page.getViewport({scale: scale});
                canvas.height = viewport.height;
                canvas.width = viewport.width;

                var renderContext = {
                    canvasContext: ctx,
                    viewport: viewport
                };
                var renderTask = page.render(renderContext);

                renderTask.promise.then(function() {
                    pageRendering = false;
                    if (pageNumPending !== null) {
                    renderPage(pageNumPending);
                    pageNumPending = null;
                    }
                });
            });

            document.getElementById('page_num').textContent = num;
        }

        /**
        * If another page rendering in progress, waits until the rendering is
        * finised. Otherwise, executes rendering immediately.
        */
        function queueRenderPage(num) {
            if (pageRendering) {
            pageNumPending = num;
            } else {
            renderPage(num);
            }
        }

        /**
        * Displays previous page.
        */
        function onPrevPage() {
            if (pageNum <= 1) {
            return;
            }
            pageNum--;
            queueRenderPage(pageNum);
        }
        document.getElementById('prev').addEventListener('click', onPrevPage);

        /**
        * Displays next page.
        */
        function onNextPage() {
            if (pageNum >= pdfDoc.numPages) {
            return;
            }
            pageNum++;
            queueRenderPage(pageNum);
        }
        document.getElementById('next').addEventListener('click', onNextPage);

        /**
        * Asynchronously downloads PDF.
        */
        pdfjsLib.getDocument(url).promise.then(function(pdfDoc_) {
            pdfDoc = pdfDoc_;
            document.getElementById('page_count').textContent = pdfDoc.numPages;

            // Initial/first page rendering
            renderPage(pageNum);
        });
  </script>

{% endif %}

    <br>
    <a href="{{ path('app_liste_des_contrats', {
        id: client.id,
        pathContratDansPublic: asset('storage/' ~ contrat.cheminFichier)
    }) }}" class="btn btn-outline-light btn-sm mt-4">Retour</a>

</div>

