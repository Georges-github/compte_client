{% extends 'base.html.twig' %}

{% block title %}Voir un employé{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5 d-flex justify-content-center">
            <div class="card bg-transparent" style="width: 18rem;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mx-auto mb-3">{{employe.prenom}} {{employe.nom}}</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">{% for r in employe.roles %}{{r|replace({'ROLE_':''})|replace({'_':' '})|lower|capitalize}}{% if not(loop.last) %} , {% endif %}{% endfor %}</h6>
                    <span class="card-text">Fixe : {{employe.telephoneFixe}}</span>
                    <span class="card-text">Mobile : {{employe.telephoneMobile}}</span>
                    <span class="card-text">Médias de contact : {% for m in employe.mediasDeContact %}{{m|lower|capitalize}}{% if not(loop.last) %} , {% endif %}{% endfor %}</span>
                    <span class="card-text">{{employe.rueEtNumero}}, {{employe.codePostal}} {{employe.ville}}</span>
                    <span class="card-text">Société : {{employe.societe}}</span>
                    <a href="#" class="btn btn-clo-outline btn-sm w-50 mx-auto mt-4">Editer</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
